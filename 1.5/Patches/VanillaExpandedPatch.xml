<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Expanded Framework</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Bogwing" or defName="CanCell" or defName="Dactillion" or defName="Hawkbat"]/comps</xpath>
          <value>
            <li Class="AnimalBehaviours.CompProperties_Floating" />
          </value>
        </li>
        <li Class="PatchOperationAdd" MayRequire="VanillaExpanded.VCEF">
          <xpath>Defs/ThingDef[defName="Aiwha"]/comps</xpath>
          <value>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingsToDig>
                <li>VCEF_RawSalmon</li>
              </customThingsToDig>
              <customAmountsToDig>
                <li>1</li>
              </customAmountsToDig>
              <spawnForbidden>true</spawnForbidden>
              <digOnlyOnGrowingSeason>false</digOnlyOnGrowingSeason>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="FrogDog"]/comps</xpath>
          <value>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingsToDig>
                <li>Meat_MegaSpider</li>
              </customThingsToDig>
              <customAmountsToDig>
                <li>5</li>
              </customAmountsToDig>
              <spawnForbidden>true</spawnForbidden>
              <digOnlyOnGrowingSeason>false</digOnlyOnGrowingSeason>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Orray"]/comps</xpath>
          <value>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
              <customThingsToDig>
                <li>Meat_MegaSpider</li>
              </customThingsToDig>
              <customAmountsToDig>
                <li>10</li>
              </customAmountsToDig>
              <spawnForbidden>true</spawnForbidden>
              <digOnlyOnGrowingSeason>false</digOnlyOnGrowingSeason>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>